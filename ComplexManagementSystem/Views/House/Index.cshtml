@model IEnumerable<ComplexManagementSystem.Models.House>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    No. Of Bedrooms
                </th>
                <th>
                    No. Of Bathrooms
                </th>
                <th>
                    Price Per Year
                </th>
                <th>
                    Price Per Month
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfRooms)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfBathrooms)
                    </td>
                    <td>
                        R @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        R @Html.DisplayFor(modelItem => item.PricePerMonth)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-dark" role="alert">
        No Data In The Database.
    </div>
}