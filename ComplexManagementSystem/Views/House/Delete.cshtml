@model ComplexManagementSystem.Models.House

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>House</h4>
    <hr />
    <!--Carousel Wrapper-->
    <div id="multi-item-example" class="carousel slide carousel-multi-item carousel-multi-item-2" data-ride="carousel">

        <!--Controls-->
        <div class="controls-top">
            <a class="black-text" href="#multi-item-example" data-slide="prev"><i class="fas fa-angle-left fa-3x pr-3"></i></a>
            <a class="black-text" href="#multi-item-example" data-slide="next"><i class="fas fa-angle-right fa-3x pl-3"></i></a>
        </div>
        <!--/.Controls-->
        <!--Slides-->
        <div class="carousel-inner" role="listbox">

            <!--First slide-->
            <div class="carousel-item active">

                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img class="img-fluid" src="~/images/@Model.PhotoPath1"
                             alt="Card image cap">
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img class="img-fluid" src="~/images/@Model.PhotoPath2"
                             alt="Card image cap">
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img class="img-fluid" src="~/images/@Model.PhotoPath3"
                             alt="Card image cap">
                    </div>
                </div>

            </div>
            <!--/.First slide-->
            <!--Second slide-->
            @if (Model.PhotoPath4 != null)
            {
                <div class="carousel-item">

                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img class="img-fluid" src="~/images/@Model.PhotoPath4"
                                 alt="Card image cap">
                        </div>
                    </div>
                    @if (Model.PhotoPath5 != null)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <img class="img-fluid" src="~/images/@Model.PhotoPath5"
                                     alt="Card image cap">
                            </div>
                        </div>
                    }
                    @if (Model.PhotoPath6 != null)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <img class="img-fluid" src="~/images/@Model.PhotoPath6"
                                     alt="Card image cap">
                            </div>
                        </div>
                    }
                </div>
            }

            <!--/.Second slide-->
        </div>
        <!--/.Slides-->

    </div>
    <!--/.Carousel Wrapper-->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ListingId)
        </dd>
        <dt class="col-sm-2">
            Street Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StreetAddress)
        </dd>
        <dt class="col-sm-2">
            Bedrooms
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfRooms)
        </dd>
        <dt class="col-sm-2">
            Bathrooms
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfBathrooms)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiniDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiniDescription)
        </dd>
        <dt class="col-sm-2">
            Higher Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Lower Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerMonth)
        </dd>
        <dt class="col-sm-2">
            Deposit
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deposit)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
