@model ComplexManagementSystem.ViewModels.PostDetailsViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="outter">
        <div class="inner">
            <div class="hero-content">
                <div class="container">
                    <h1 class="subhero-title">
                        Type: @Model.Post.Topic<br>
                        <span>@Model.Post.DateCreated</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="news-list atop">
    <div class="container">
        <div class="row">
            <!-- Post -->
            <article class="col-lg-12">
                <div class="post-image">
                    <img src="~/images/@Model.Post.PhotoPath1" alt="">
                </div>
                <div class="article-content">
                    <div class="col-lg-8 offset-lg-2 article-bottom text-center">
                        <p>@Model.Post.Blog</p>
                    </div>
                </div>
            </article>
        </div> <!-- row end -->
    </div>  <!-- container end-->
</section>
<article>
    <div class="container padding_60">
        <div class="lightbox-gallery row box-animation">
            <!-- a image -->
            <div class="col-lg-6">
                <a href="~/images/@Model.Post.PhotoPath2" class="image lightbox">
                    <img src="~/images/@Model.Post.PhotoPath2" alt="" style="border-radius:10px; height:400px">
                </a>
            </div>
            <div class="col-lg-6">
                <a href="~/images/@Model.Post.PhotoPath3" class="image lightbox">
                    <img src="~/images/@Model.Post.PhotoPath3" alt="" style="border-radius:10px; height:400px">
                </a>
            </div>
        </div>
    </div>
</article>