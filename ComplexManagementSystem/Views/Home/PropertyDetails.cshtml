@model ComplexManagementSystem.ViewModels.HouseDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="hero">
        <div class="outter">
            <div class="inner">
                <div class="hero-content">
                    <div class="container">
                        <h1 class="subhero-title">
                            Type: @Model.House.Type<br>
                            <span>Price: R @Model.House.Price</span>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="news-list atop">
        <div class="container">
            <div class="row">
                <!-- Post -->
                <article class="col-lg-12">
                    <div class="post-image">
                        <img src="~/images/@Model.House.PhotoPath1" alt="">
                    </div>
                    <div class="article-content">
                        <div class="article-top">
                            <ul class="entry-data">
                                <li><a href="">Listing Id: </a></li>
                                <li><a href="">@Model.House.ListingId</a></li>
                            </ul>
                            <br />
                            <ul class="entry-data">
                                <li><a href=""><i class="fas fa-bed"></i> @Model.House.NumberOfRooms</a></li>
                                <li><a href=""><i class="fas fa-bath"></i> @Model.House.NumberOfBathrooms</a></li>
                            </ul>
                            <div class="entry-date">
                                <a href="#">Size: @Model.House.Size</a>
                            </div>
                        </div>
                        <div class="col-lg-8 offset-lg-2 article-bottom text-center">
                            <p>@Model.House.Description</p>
                        </div>
                    </div>
                </article>
            </div> <!-- row end -->
        </div>  <!-- container end-->
    </section>

    <article>
        <img src="~/images/@Model.House.PhotoPath1">
        <br />
        <img src="~/images/@Model.House.PhotoPath2">
        <br />
        <img src="~/images/@Model.House.PhotoPath3">
        <br />
        <img src="~/images/@Model.House.PhotoPath4">
        <br />
        <img src="~/images/@Model.House.PhotoPath5">
        <br>
        <img src="~/images/@Model.House.PhotoPath6">
    </article>