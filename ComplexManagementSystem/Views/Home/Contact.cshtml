@model ComplexManagementSystem.ViewModels.ContactCreateViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero">
    <div class="outter">
        <div class="inner">
            <div class="hero-content">
                <div class="container">
                    <span class="little">Get In Touch</span>
                    <h1 class="subhero-title">
                        Like what you see? <br>
                        <span>Let us help you find a home</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="contact atop padbot_120">
    <div class="container">
        <div class="row">
            <!-- contact form -->
            <div class="col-lg-5">
                <form class="row" asp-action="Contact">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- name -->
                    <div class="form-group">
                        <div class="placeholder">Your name</div>
                        <input asp-for="FullName" class="inp" type="text" style="color:white">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="placeholder">Listing Number(optional)</div>
                        <input asp-for="ListingId" class="inp" type="text" style="color:white">
                    </div>
                    <!-- Phone -->
                    <div class="form-group">
                        <div class="placeholder">Your Phone Number</div>
                        <input asp-for="Phone" class="inp" type="text" style="color:white">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <!-- Email -->
                    <div class="form-group">
                        <div class="placeholder">Your Email</div>
                        <input asp-for="Email" class="inp" type="text" style="color:white">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- about project -->
                    <div class="form-group">
                        <div class="placeholder">Leave us a message</div>
                        <textarea asp-for="Message" class="inp" rows="5" required="" data-msg-required="This field is required." placeholder="" style="color:white"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <!-- button -->
                    <div class="form-group">
                        <input type="submit" value="Create" class="site-btn" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>